<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lvd.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sweet_icons"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity" android:windowSoftInputMode="stateAlwaysVisible">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".ListActivity" />
        <activity android:name=".DetailActivity" />
        <activity android:name=".LikeActivity" />

        <provider
            android:authorities="com.example.lvd.provider.rating"
            android:name=".RatingMemoryProvider" >
        </provider>
    </application>

</manifest>